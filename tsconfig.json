{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2020",
    "module": "ES2015",
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/tests/*"]
}
